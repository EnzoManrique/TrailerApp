<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Fecha y Tipo Cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icono -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sales"
                android:padding="8dp"
                android:background="@drawable/clay_icon_circle_coral"
                app:tint="@color/white" />

            <!-- Info: Fecha y Tipo Cliente -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_sale_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02 Feb 2026, 22:45"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_customer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Cliente: Lista"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Total de la venta -->
            <TextView
                android:id="@+id/tv_sale_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,250.00"
                android:textSize="24sp"
                android:textColor="@color/accent_coral"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Badges / Indicadores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <!-- Badge de promociÃ³n aplicada -->
            <TextView
                android:id="@+id/tv_promo_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰ PromociÃ³n"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/badge_stock"
                android:backgroundTint="@color/success"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone" />

            <!-- Separador -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Items count -->
            <TextView
                android:id="@+id/tv_items_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 items"
                android:textSize="12sp"
                android:textColor="@color/text_hint" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
