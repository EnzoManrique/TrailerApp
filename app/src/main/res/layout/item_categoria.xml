<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header con nombre y badge de color -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Color badge de categoría -->
            <View
                android:id="@+id/view_category_color"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/chip_category"
                android:backgroundTint="@color/accent_purple" />

            <!-- Nombre de la categoría -->
            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Nombre de Categoría"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Botón Editar -->
                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/button_circle_primary"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Editar"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white" />

                <!-- Botón Eliminar -->
                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/button_circle_danger"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Eliminar"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Contador de productos -->
        <TextView
            android:id="@+id/tv_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="0 productos"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
